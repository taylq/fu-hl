<div class="signup-page">
  <div class="signup-box">
    <div class="logo">
        <a><b>Signup</b></a>
        <small>Register a new membership</small>
    </div>
    <div class="card">
      <div class="body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">person</i>
            </span>
            <div class="form-line">
              <%= f.text_field :name, autofocus: true, class: "form-control",
                placeholder: "Name" %>
            </div>
          </div>

          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">email</i>
            </span>
            <div class="form-line">
              <%= f.email_field :email, autofocus: true, class: "form-control",
                placeholder: "Email Address" %>
            </div>
          </div>

          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">home</i>
            </span>
            <div class="form-line">
              <%= f.text_field :room, autofocus: true, class: "form-control",
                placeholder: "Room" %>
            </div>
          </div>

          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">call</i>
            </span>
            <div class="form-line">
              <%= f.number_field :phone, autofocus: true, class: "form-control",
                placeholder: "Phone Number" %>
            </div>
          </div>

          <div class="input-group area_choices">
            <%= f.select :area_id, area_choices %>
          </div>

          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">lock</i>
            </span>
            <div class="form-line">
              <%= f.password_field :password, autocomplete: "off",
                class: "form-control", placeholder: "Password" %>
            </div>
          </div>

          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">lock</i>
            </span>
            <div class="form-line">
              <%= f.password_field :password_confirmation, autocomplete: "off",
                class: "form-control", placeholder: "Confirm Password" %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-block btn-lg bg-pink waves-effect" %>
          </div>
        <% end %>
        <div class="m-t-25 m-b--5 align-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>